            "schema": {
              "$ref": "#/components/schemas/UUID"
            }
          }
        ],
        "requestBody": {
          "description": "Novos dados do encarregado (substituição completa)",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EncarregadoDTO"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Encarregado atualizado com sucesso",
