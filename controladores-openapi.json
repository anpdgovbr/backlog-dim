              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EncarregadoDTO"
                }
              }
            }
          },
          "404": {
            "description": "Encarregado não encontrado com o ID especificado"
          },
          "400": {
            "description": "Dados inválidos"
          },
          "422": {
            "description": "Erro de validação de negócio"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      },
